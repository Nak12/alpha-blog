
<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :name %>
    </label>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12">
  
        <%= link_to 'Back', categories_path, class: "btn btn-secondary btn-sm" %> | <%= f.submit class: "btn btn-primary btn-sm" %>
        
    </div>
  </div>

<% end %>