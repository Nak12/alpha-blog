

<div class="row">
  <div class="col-sm-12">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, class: "alert alert-#{key} alert-dismissible") do %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong><%= key.capitalize %>!</strong> <%= value %>
      <% end %>
    <% end %>
  </div>
</div>




