<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>" >
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, value, :id => "flash_#{value}" if value.is_a?(String) %>
      </div>
    <% end %>
  </div>
</div>

