<h1>Log in</h1>
<br>
<%= form_for(:session, url: login_path) do |f|  %>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :email %>
    </label>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">
      <%= f.label :password %>
    </label>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" , autocomplete: "off" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-sm-12">
      <div class="buttons">
        <%= f.submit "Log in",  class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>

<% end %>