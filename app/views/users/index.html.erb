<div class="row">
  <div class="col-sm-12">
    <h1>All Alpha Bloggers</h1>
     <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 text-center">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title"><%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>

          <!--se for admin pode deletar qualquer usuÃ¡rio-->
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want delete the user and all their articles?"}, class: "btn btn-danger btn-sm" %></li>
          <% end %>
          
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
  </div>
</div>


 
 

